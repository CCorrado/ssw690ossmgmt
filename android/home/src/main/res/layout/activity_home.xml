<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <FrameLayout android:layout_width="match_parent"
                 android:id="@+id/activity_home_frag_container"
                 android:layout_height="0dp"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toTopOf="@id/activity_home_bottom_nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            app:menu="@menu/bottom_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/activity_home_bottom_nav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_home_frag_container"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>